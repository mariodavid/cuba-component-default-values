<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="defaultValueConfigurationsTable"
        messagesPack="de.diedavids.cuba.defaultvalues.web.screens.defaultvalueconfiguration">
    <data readOnly="true">
        <collection id="defaultValueConfigurationsDc"
                    class="de.diedavids.cuba.defaultvalues.entity.DefaultValueConfiguration"
                    view="_local">
            <loader id="defaultValueConfigurationsDl">
                <query>
                    <![CDATA[select e from ddcdv_DefaultValueConfiguration e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="defaultValueConfigurationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="defaultValueConfigurationsTable"
                dataLoader="defaultValueConfigurationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="defaultValueConfigurationsTable"
                    width="100%"
                    dataContainer="defaultValueConfigurationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="entity"/>
                <column id="entityAttribute"/>
                <column id="value"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="defaultValueConfigurationsTable.create"/>
                <button id="editBtn" action="defaultValueConfigurationsTable.edit"/>
                <button id="removeBtn" action="defaultValueConfigurationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
